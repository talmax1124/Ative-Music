# Ative Music Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Configuration (REQUIRED)
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE
CLIENT_ID=YOUR_DISCORD_CLIENT_ID_HERE

# Spotify API (Optional but recommended for better search results)
SPOTIFY_CLIENT_ID=YOUR_SPOTIFY_CLIENT_ID_HERE
SPOTIFY_CLIENT_SECRET=YOUR_SPOTIFY_CLIENT_SECRET_HERE

# Music Recommendation APIs (Optional but highly recommended for better music suggestions)

# OpenAI API - For AI-powered smart music recommendations
# Get your API key at: https://platform.openai.com/api-keys
# This enables intelligent music curation based on listening context and history
OPENAI_API_KEY=your_openai_api_key_here

# Last.fm API - For music similarity and genre data
# Get your API key at: https://www.last.fm/api/account/create
LASTFM_API_KEY=6c3fafa787621439576395b9cc7dffa2
LASTFM_SECRET=2d38c13ed47a49e615bf7786bf2cabd2

# TheAudioDB API - For additional artist and track information
# Free tier available, get key at: https://www.theaudiodb.com/api_guide.php
# AUDIODB_API_KEY=your_audiodb_key_here

# Neon PostgreSQL Database (REQUIRED for data persistence)
# Get your connection string from: https://console.neon.tech/
# Example: postgresql://username:password@ep-hostname.region.neon.tech/database?sslmode=require
DATABASE_URL=postgresql://username:password@your-neon-hostname.region.neon.tech/database?sslmode=require

# Server Configuration (For Pterodactyl/VPS deployment)
NODE_ENV=production
PORT=3000

# Web Portal (Search + Play) â€” external access
# Bind the portal to your VPS IP and port
WEB_HOST=0.0.0.0
WEB_PORT=25567

# Public address shown in logs/links (optional)
# PUBLIC_HOST=199.244.48.46
# PUBLIC_PORT=25567

# Optional: simple API token for portal APIs
# Set to any random string to require x-api-key header
# WEB_API_TOKEN=change-me-strong-secret

# Advanced streaming tuning (default: off)
# When false, the portal's Quality/Extractor controls are ignored and the bot uses automatic defaults
ADVANCED_STREAM_TUNING=false

# Optional: Override host for video server (Pterodactyl users)
# SERVER_HOST=your-server-ip
# SERVER_PORT=25567

# Optional: Additional node packages to install
# NODE_PACKAGES=

# Debug settings (set to true for verbose logging)
DEBUG=false
